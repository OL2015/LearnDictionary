<Window x:Class="DictionaryUI.ACTBDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:DictionaryUI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoCompleteTextBox Demo" Height="300" Width="300">
 
        <StackPanel Background="SteelBlue">
            <local:AutoCompleteTextBox Height="23" Width="240" Margin="20"  
                                       x:Name="textBox1" DelayTime="200" Threshold="1"/>
            <Button Name="button2" Height="23" Width="75" Margin="20" Click="button2_Click" HorizontalAlignment="Left">Show selected</Button>
        </StackPanel> 
    
</Window>
